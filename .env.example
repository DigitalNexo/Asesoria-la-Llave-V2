# Server Configuration
PORT=5000
NODE_ENV=development

# Cron Jobs Configuration
# IMPORTANTE: Los cron jobs NO funcionan en Autoscale Deployments
# - En desarrollo: se ejecutan automáticamente
# - En producción Autoscale: usar Scheduled Deployments de Replit
# - En Reserved VM: configurar ENABLE_CRON_JOBS=true
ENABLE_CRON_JOBS=false

# If you are developing locally and want to use the bundled docker-compose DB
# set ALLOW_LOCAL_DB=true. For production, keep this false to force external DB.
ALLOW_LOCAL_DB=false

# Authentication
JWT_SECRET=your-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# Initial Admin User (created automatically on first server startup)
# ⚠️  IMPORTANTE: Debes cambiar estos valores ANTES del primer inicio
# ⚠️  El servidor NO iniciará sin credenciales únicas configuradas
# This user will have full administrator privileges with all permissions
ADMIN_EMAIL=CAMBIAR_ESTE_EMAIL@ejemplo.com
ADMIN_USERNAME=CAMBIAR_ESTE_USUARIO
ADMIN_PASSWORD=CAMBIAR_ESTA_CONTRASEÑA_AHORA

# Database Configuration (MariaDB/MySQL) - EXTERNAL DB REQUIRED
# This project is configured to ALWAYS use an external MariaDB/MySQL instance.
# Do NOT use SQLite or an embedded DB. Provide the connection string below
# pointing to your MariaDB server (VPS, managed DB, or remote host):
# Example:
# DATABASE_URL="mysql://user:password@host:3306/asesoria_llave?socket_timeout=60&connect_timeout=60"
DATABASE_URL="mysql://user:password@host:3306/asesoria_llave?socket_timeout=60&connect_timeout=60"

# Docker/Production Database Configuration
DB_ROOT_PASSWORD=change_this_root_password
DB_DATABASE=asesoria_llave
DB_USER=asesoria_user
DB_PASSWORD=change_this_password

# Email Configuration (SMTP - Optional, can be configured from admin panel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# S3-Compatible Storage Configuration (Backblaze B2, MinIO, AWS S3)
S3_ENDPOINT=https://s3.us-west-002.backblazeb2.com
S3_BUCKET=asesoria-files
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=us-west-002

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5000