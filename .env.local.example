# .env.local.example - para desarrollo local usando MariaDB en Docker
PORT=5000
NODE_ENV=development
ALLOW_LOCAL_DB=true

# Admin user (para desarrollo solo)
ADMIN_EMAIL=dev-admin@example.com
ADMIN_USERNAME=devadmin
ADMIN_PASSWORD=devpassword123

# Database: se usar√° la base de datos del docker-compose.dev.yml
DB_ROOT_PASSWORD=rootpassword
DB_USER=asesoria_user
DB_PASSWORD=asesoria_local_password
DB_DATABASE=asesoria_llave
DATABASE_URL="mysql://asesoria_user:asesoria_local_password@127.0.0.1:3306/asesoria_llave?socket_timeout=60&connect_timeout=60"

# Mail (opcional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=dev@example.com
SMTP_PASSWORD=devpassword
