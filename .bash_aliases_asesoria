# ========================================
# Alias para Asesor√≠a La Llave
# ========================================
# Para activar estos alias, a√±ade esto a tu ~/.bashrc:
#   source /root/www/Asesoria-la-Llave-V2/.bash_aliases_asesoria
# Luego ejecuta: source ~/.bashrc
# ========================================

# Directorio del proyecto
export ASESORIA_DIR="/root/www/Asesoria-la-Llave-V2"

# Alias de navegaci√≥n
alias ase-cd='cd /root/www/Asesoria-la-Llave-V2'
alias ase-server='cd /root/www/Asesoria-la-Llave-V2/server'
alias ase-client='cd /root/www/Asesoria-la-Llave-V2/client'

# Alias de gesti√≥n del servicio
alias ase-status='systemctl status asesoria-llave --no-pager'
alias ase-start='systemctl start asesoria-llave'
alias ase-stop='systemctl stop asesoria-llave'
alias ase-restart='systemctl restart asesoria-llave'
alias ase-enable='systemctl enable asesoria-llave'
alias ase-disable='systemctl disable asesoria-llave'

# Alias de logs
alias ase-logs='journalctl -u asesoria-llave -f'
alias ase-logs-100='journalctl -u asesoria-llave -n 100 --no-pager'
alias ase-logs-error='journalctl -u asesoria-llave -p err -n 50 --no-pager'

# Alias de despliegue
alias ase-deploy='cd /root/www/Asesoria-la-Llave-V2 && ./deploy.sh'
alias ase-deploy-db='cd /root/www/Asesoria-la-Llave-V2 && ./deploy-with-db.sh'
alias ase-quick='cd /root/www/Asesoria-la-Llave-V2 && ./quick-restart.sh'
alias ase-check='cd /root/www/Asesoria-la-Llave-V2 && ./check-status.sh'

# Alias de desarrollo
alias ase-build='cd /root/www/Asesoria-la-Llave-V2 && npm run build'
alias ase-prisma='cd /root/www/Asesoria-la-Llave-V2 && npm run prisma:generate && npm run prisma:push'

# Alias de base de datos
alias ase-db='mysql -u app_area -p area_privada'
alias ase-db-status='systemctl status mariadb --no-pager'
alias ase-db-restart='systemctl restart mariadb'

# Alias de utilidades
alias ase-port='ss -tlnp | grep 5000'
alias ase-ps='ps aux | grep "node dist/index.js" | grep -v grep'
alias ase-health='curl -s http://localhost:5000/health | jq .'
alias ase-env='cat /root/www/Asesoria-la-Llave-V2/.env'

# Alias de ayuda
